{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "Node16",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "outDir": "dist",
        "moduleResolution": "Node16",
        "paths": {
            "common/*": [ "common/*" ],
            "models/*": [ "models/*" ],
            "routes/*": [ "routes/*" ],
            "services/*": [ "services/*" ]
        }
    },

    "include": [
        "./**/*.ts",
        "./**/*.d.ts"
    ],
    "exclude": [
        "node_modules", 
        ".vscode"
    ],

    "ts-node": {
        "esm": true,
        "transpileOnly": true
      }
}